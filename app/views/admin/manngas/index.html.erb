<div class="row">
    <div class="col-xs-10 col-xs-offset-1">

	    <div class="row">
	      <h3>漫画</h3>
	    </div>

	    <div class="text-right">
	      <%= link_to "漫画登録",new_admin_mannga_path, class: "btn-lg btn-primary" %>
	    </div>

		<table class="table">
			<thead>
				<tr>
					<th>漫画ID</th>
					<th>漫画名名</th>
					<th>作者</th>
				</tr>
			</thead>
			<tbody>
				<% @manngas.each do |mannga| %>
					<tr>
						<td><%= mannga.id %></td>
						<td><%= link_to mannga.name, admin_mannga_path(mannga) %></td>
						<td><%= mannga.author %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
    </div>
</div>


