 <%= form_for([:admin, @mannga]) do |f| %>

      <div class="col-xs-5">
        <div class="field">
          <%= f.label :image do%>
          <%= attachment_image_tag(@item, :image_id,id: "preview", size: '400x300', fallback: "no_image.jpg") %>
          <% end %>
          <%= f.attachment_field :image, class: "mannga_image" %>
        </div>
      </div>

      <div class="col-xs-6">
        <div class="field">
          <%= f.label :name, "漫画名", style: "width: 110px;" %>
          <%= f.text_field :name, class: "form-control", style: "width: 300px;" %>
        </div>

        <div class="field label-top">
          <%= f.label :description, "漫画説明", style: "width: 110px;" %>
          <%= f.text_area :description, class: "form-control", rows: 7, style: "width: 300px;" %>
        </div>

        <div class="field">
          <%= f.label :genre_id, "ジャンル", style: "width: 110px;" %>
          <%= f.collection_select :genre_id, Genre.where(status: "true"), :id, :name, include_blank: "選択してください" %>
        </div>

        <div class="field">
          <%= f.label :author, "作者", style: "width: 110px;" %>
          <%= f.text_field :author, class: "form-control", style: "width: 300px;" %>
        </div>

        <div class="actions text-right">
          <%= f.submit "新規登録", class: "btn-lg btn-primary" %>
        </div>
      </div>

    <% end %>