
<%= form_for [:admin, @genre] do |f| %>
	<%= f.label :name, "ジャンル", id: "genre-label" %>
	<%= f.text_field :name, class: "form-control", style: "width: 250px;" %>
	<%= f.radio_button :status, true, checked: true %>
	<%= f.label :status, "有効", value: true, class: "radio-label label-size" %>
	<%= f.radio_button :status, false %>
	<%= f.label :status, "無効", value: false, class: "radio-label label-size" %>
	<%= f.submit "追加", class: "left-space btn btn-primary" %>
<% end %>
<% @genres.each do |genre| %>
	<tr>
		<td><%= genre.name %></td>
			<% if genre.status == true %>
		<td>有効<%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary left-space" %></td>
			<% else %>
		<td class="font-red">無効<%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary left-space" %></td>
			<% end %>
	</tr>
<% end %>