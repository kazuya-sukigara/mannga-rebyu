<div class="container">
  <div class="row">

　　<%= form_for @contact do |f| %>


 　 <div class="form-group">
    <%= f.label :email, '返信先メールアドレス' %>
    <%= f.text_field :email, class: 'form-control',placeholder:'自分のメールアドレス' %>
  </div>

 <div class="form-group">
   <%= f.label :message, 'お問い合わせ内容' %>
   <%= f.text_area :message, size: '10x10', class: 'form-control',placeholder:'追加して欲しい機能や要望　その他問合せ' %>
 </div>

  <%= f.submit '送信' %>

<% end %>
</div>
</div>