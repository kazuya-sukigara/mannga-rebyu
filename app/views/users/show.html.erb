<div class="container">
	<div class="row">
	　<div class="font_z">user_porofil</div>
	</div>

	<div class="row">
		<div class="col-xs-5">
			<table class="table">
				<tr>
					<th><h3>name</h3></th>
					<td><%= @user.last_name%>　<%= @user.first_name %></td>
				</tr>
				<tr>
					<th><h3>description</h3></th>
					<td><%= @user.description %></td>
				</tr>
				<tr>
					<th><h3>nick_name</h3></th>
					<td><%= @user.nick_name %></td>
				</tr>
				<tr>
					<th><h3>email</h3></th>
					<td><%= @user.email %></td>
				</tr>
				<tr>
					<th><h3>follow</h3></th>
					<td><%= @user.followings.count %></td>
				</tr>
				<tr>
				    <th><h3>followers</h3></th>
				    <td><%= @user.followers.count %></td>
				</tr>
				</table>
			</table>
			<%= render 'relationships/follow_button', user: @user, relotionship: @relationship %>
			<% if current_user == @user %>
			<%= link_to "編集する", edit_user_path, class: "btn btn-warning" %>
			<%= link_to "パスワードを変更する", edit_user_registration_path, class: "btn btn-warning" %>
			<% end %>
	    </div>



		<div class="col-xs-7">
		    <div class="row">
				<% @posts.each do |post| %>
				<%= post.mannga.name %>
				<%= post.title %>
				 <div id="star-rate-<%= post.id %>"></div>
                <script>
                $('#star-rate-<%= post.id %>').raty({
                  size: 36,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half: true,
                  readOnly: true,
                  score: <%= post.rate %>,
                  });
                </script>
				<% end %>
			</div>
		</div>
	</div>
</div>

