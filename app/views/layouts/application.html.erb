<!DOCTYPE html>
<html>
  <head>
    <title>漫画レビュー</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="padding-top: 70px;">


    <header class="navbar navbar-fixed-top navbar-dark">
      <div class="container">
        <nav>
          <ul class="nav navbar-nav navbar-center ">
            <!--if文でサインインとアウト時の表示を変更-->
            <% if user_signed_in? %>
            <li><%= link_to ' マイページ', user_path(current_user)%></li>
            <li><%= link_to ' 漫画一覧', manngas_path%></li>
            <li><%= link_to ' 問合せ', contacts_new_path%></li>
            <li><%= link_to ' フォローリスト', contacts_new_path%></li>
            <li><%= link_to ' フォロワーリスト', contacts_new_path%></li>
            <li><%= link_to ' いいね一覧', contacts_new_path%></li>
            <li><%= link_to ' ログアウト', destroy_user_session_path, method: :delete %></li>


            <% else %>
            <li><%= link_to ' TOPページ', admin_genres_path, class: 'glyphicon glyphicon-home home' %></li>
            <li><%= link_to ' 概要',admin_genres_path , class: 'glyphicon glyphicon-link about' %></li>
            <li><%= link_to ' 新規登録', new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
            <li><%= link_to ' ログイン', new_user_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
            <li><%= link_to ' 問合せ', contacts_new_path%></li>
            <% end %>
          </ul>
        </nav>
        <div style="margin-top: 70px; text-align: center;"><%= form_tag(search_users_path, :method => 'get') do %>
    <%= select_tag(:option, options_for_select([["user", "1"],["mannga","2"]]))%>
    <%= select_tag(:choice, options_for_select([["部分一致", "1"],["後方一致","2"],["前方一致","3"],["完全一致","4"]]))%>
    <%= text_field_tag :search %>
    <%= submit_tag 'Search' %>
    <% end %>
      </div>
    </header>


    <%= yield %>

    <!--ヘッダーの記述-->
    <div class="container">
      <!--デバイスでnotice設定されているので呼び出してるだけ-->
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

    </div>
  </body>
</html>